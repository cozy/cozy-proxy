extends _view_step_base


block header
    h1=t('step infos title')

block region
    form(id="infos-form")
        p=t('step infos description')

        p(class='line')
            label(for="public_name")=t('step infos public_name label')
            input(
                type="text",
                name="public_name",
                id="public_name",
                placeholder=t("step infos public_name placeholder"))
            p.error-label(data-for="public_name")

        p(class='line')
            label(for="email")=t('step infos email label')
            input(
                type="text",
                name="email",
                id="email",
                placeholder=t("step infos email placeholder"))
            p.error-label(data-for="email")

        p(class='line')
            label(for="timezone")=t('step infos timezone label')
            input(type="text", name="timezone", id="timezone" placeholder=t("step infos timezone placeholder"))
            p.error-label(data-for="timezone")

        p(class="errors")

block controls
    button(class="next", form="infos-form")= t('step infos submit')
    .progression
