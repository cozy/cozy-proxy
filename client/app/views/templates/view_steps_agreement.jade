extends _view_step_base

block header
    h1=t('step agreement title')

block region
    div.agreements
        each figure,elementName in figures
            div.agreements-element
                figure(id=elementName)
                    .svg-wrapper
                        svg: use(xlink:href=figure)
                p=t('step agreement ' + elementName + ' element')


    div.stats-agreement
        input(type="checkbox")
        p=t('step agreement stats')

    p=t('step agreement description')


block controls
    button(class="next")= t('step agreement next')
