@import "nib"

shadow()
    -moz-box-shadow arguments
    -webkit-box-shadow arguments
    box-shadow arguments

text-shadow()
    -moz-text-shadow arguments
    -webkit-text-shadow arguments
    text-shadow arguments

@font-face
    font-family main
    src url('/fonts/signika-regular.ttf')

@font-face
    font-family styled
    src url('/fonts/maven-pro-light-200.otf')


blue = #15a7c7
darkblue = #363a46
darkred = #C66666
darkgreen = #66C666
orange = #C60
orangewhite = #fcf9f5

html, body
    height 100%
    width 100%
    padding 0
    margin 0
    box-sizing border-box

html, body, h1, p, input, div
    box-sizing border-box

body
    background orangewhite

a, a:hover
    color blue
    cursor pointer

a:hover
    color orange + 20%

h1
    font-size 2.2em
    line-height 1.3em
    font-family styled
    font-weight normal
    color darkblue
    margin 0

button
    font-size 1.1em
    border-radius 0.4em
    padding 0.6em 0.8em

input
select
    font-family styled
    font-size 26px
    height 52px
    width 550px
    padding 4px 10px
    border-radius 0.4em
    color blue
    box-shadow 0 0 0 0
    border 1px solid transparent

input:focus
select
    color orange + 20%
    box-shadow 0 0 0 0
    border 1px solid orange + 50%
    outline none

p
    font-family: main

.alert
    width 22em
    border 0
    display none

.alert-error
    font-family styled
    font-size 20px
    background darkred
    padding 5px 10px
    width 550px
    color white

.alert-success
    font-family styled
    font-size 2em
    background darkgreen
    padding 20px
    width 550px
    color white
    margin 35px 0

.additional-line
    margin-top 1em

.loading
    width 30px
    margin-bottom 0px

.alert-error
.alert-success
    display none
    border-radius 5px

#header
    width 100%
    clear both

#header:after
    content ""
    display table
    clear both

#submit-btn
    margin-left 5px
    margin-bottom 9px
    border-radius 0.4em
    border 0
    outline 0
    padding 7px
    color white
    margin-left 0px
    width 570px
    width 100%
    cursor pointer
    background blue

.proxy-form.register
    margin-top -40px


.input-wrapper
    margin 1em 0

    &.invalid
        input
            border 1px solid red

#btn-wrapper
    width 550px
    .btn-container
        display inline-block
        width 270px
        &.left
            text-align left
        &.right
            text-align right
        &.center
            text-align center

        #submit-btn
            width 250px
            font-family main
        &.single
            width 100%
            #submit-btn
                width 100%
    #btn-separator
        display inline-block
        width 10px

#expand-btn
    font-family main
    font-size 14px
    display inline-block
    margin-left 5px
    margin-bottom 9px
    color blue
    &:hover
        color orange

#reinsurance
    width 550px
    text-align center
    font-family styled
    font-size 16px

.help
    display inline-block
    vertical-align middle
    position relative
    i.icon
        display inline-block
        height 48px
        width 48px
        opacity 0.2
        background url('/images/help.png') no-repeat center center
    .help-info
        display none
        position absolute
        top 0
        left 100%
        width 300px
        background #fff
        padding 5px
        border 3px solid blue
        border-radius 5px
        font-family main

        .valid
        .invalid
            margin-top 5px
        .valid
            color green
            display none
        .invalid
            color red

    &.selected
    &:hover
        i.icon
            opacity 0.6
        .help-info
            display block

#submit-btn:hover
    background orange + 20%

#submit-btn:active
    box-shadow 1px 3px 2px rgba(0, 0, 0, 0.4) inset
    background orange + 10%

#submit-btn:disabled
    opacity 0.5

#username
    color blue - 20%

#content
    padding 20px
    padding-left 60px

#email-input
    margin-bottom 0px

#forgot-password
    display none
    font-family main

#logo
    float right
    margin 40px 40px

.proxy-form.error
    margin-top -40px
    font-family styled
    font-size 20px
    background darkred
    padding 5px 10px
    width 750px
    color white
    border-radius 5px

    h1
        color white

    a
        color white

        &:hover
            color blue




@media(max-width: 640px)

    h1
        padding 0 0
        font-size 26px

    .proxy-form
        padding-top 1em
        padding-bottom 1em


        p
            box-sizing border-box

        .input-wrapper
            padding 0

            .help
                i.icon
                    display none
                .help-info
                    position relative
                    left 0
                    top 5px
                    width 100%
                    font-size 14px

        input
        select
            width 100%
            padding 0
            display block
            box-sizing border-box
            font-size 26px

        #reinsurance
        #btn-wrapper
            width 100%

        .loading
            display none

        #btn-wrapper #btn-separator, #btn-wrapper .btn-container
            width 100%
            text-align center
            button
                width 100%

    .alert-error
    .alert-success
        width auto
        box-sizing border-box

    .alert-success
        font-size 20px

    #content
        padding 40px
        box-sizing border-box

        div
            box-sizing border-box

    #logo
        margin 20px

@media(max-width: 320px)

    #logo
        margin 10px

    h1
        padding 0 0
        font-size 20px

    .help
        display none
