// border-radius
$border-radius-01
    border-radius 2px

$border-radius-04
    border-radius 20px

$border-radius-round
    border-radius 100%

// shadows
$shadow-depth-01
    box-shadow 0 1px 3px rgba(0,0,0,.12)

$shadow-depth-02
    box-shadow 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23)

$shadow-depth-03
    box-shadow 0 10px 20px rgba(0,0,0,.19), 0 6px 6px rgba(0,0,0,.23)


// inputs
$reset-input
    outline       none
    box-shadow    0 0

$box-border-bottom
    border       2px solid $grey-02
    border-width 0 0 2px 0

// transition
$transition-sexy
    transition background ease-out 0.4s, border ease-out 0.4s

    &:hover
        transition-duration 0.1s
