doctype 5
html(lang="en")
  head
    title Cozy Home - Sign in
    script(src='/jquery-1.8.2.js')
    script(src='/client.js')
    script(src='/login.js')
    link(rel='stylesheet', href='/bootstrap.css') 
    link(rel='stylesheet', href='/app.css') 
    link(rel='icon', type='image/x-icon', href='/favicon.png')
  body
    #content
      .proxy-form
        h1 Welcome, 
          span#username #{username}
        p
          input#password-input(type='text', type='password',
                               placeholder='password')
          button#submit-btn Login
        p
          img(src='/grey-logo.png', alt='Cozy logo')
      .error-box.alert.alert-error
      .error-box.alert.alert-success
      p.additional-line
        a#forgot-password forgot password ?
